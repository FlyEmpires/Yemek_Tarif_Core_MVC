@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Atama</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].ROleID"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-outline-info">Değişklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-outline-primary">Kullanıcı Listesine Dön</a>