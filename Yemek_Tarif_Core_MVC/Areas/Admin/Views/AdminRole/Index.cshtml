@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Rol Listesi</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Rol Adı</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.Id</th>
                                    <td>@item.Name</td>
                                    <td><a href="" class="btn btn-outline-danger" onclick="deleteRole('@item.Id')">Sil</a></td>
                                    <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-info">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/AdminRole/AddRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                    <a href="/Admin/AdminRole/UserRoleList" class="btn btn-outline-primary">Kullanıcı Rol Listesi</a>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
<script>
    function deleteRole(id){
        if (confirm("Yazarı silmek istediğinize emin misiniz?")) {
            $.ajax({
                url:'/Admin/AdminRole/DeleteRole',
                method:'GET',
                data: {id:id},
                success: function (data) {
                    console.log(data);
                    console.log(id);
                    window.loaction.href='/Admin/AdminRole/Index'
                }
            });
        }
    }
</script>