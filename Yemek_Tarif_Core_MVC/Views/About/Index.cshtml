@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Hakkımızda</h3>
		<div class="row inner-sec">
			<!--left-->
			<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
				<div class="blog-grid-top">

					<div class="blog_info_left_grid">
						<a href="single.html">
							<img src="/tema/images/b5.jpg" class="img-fluid" alt="">
						</a>
					</div>
					<h3>
						Neden Buradayız?
					</h3>
					@foreach (var item in Model)
					{
					<p>
						@item.AboutDetails1
						@*Amacımız, insanların evlerinde "acaba bugün ne pişirsem?" diye kararsız kaldığında burada bir çok yemek tarifini bulabileceği ve isterlerse başklarının işlerine kolaylık sağlamak için kendilerinin de yemek tarifi ekleyebileceği bir site sunmaktır.*@
					</p>
					}
				</div>
			</div>
			<!--//left-->
			<!--right-->
			<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
				<div class="right-blog-info text-left">
					<div class="tech-btm">
                        <img src="/Tema/images/banner1.jpg" class="img-fluid" alt="">
					</div>


					@await Component.InvokeAsync("NewsLetters")
					@await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")
					@* @await Component.InvokeAsync("WriterLastRecipes") *@
				</div>

			</aside>
			<!--//right-->
		</div>
	</div>
</section>
<!--//main-->

