@using DataAccessLayer.Concrete;
@*@using EntityLayer.Concrete;*@

@model IEnumerable<EntityLayer.Concrete.Recipe>
@{
    ViewData["Title"] = "YemekDetay";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@{
    int RecipeID = ViewBag.id;
    Context db = new();
}
<html lang="zxx">
<body>
    @*<div class="banner-inner">
    </div>*@


    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Recipe/Index">Tarifler</a>
        </li>
        <li class="breadcrumb-item active">@Model.FirstOrDefault().ReceipeName</li>
    </ol>

    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        var recipeRaytingCount = db.RecipeRaytings.Where(x => x.RecipeID == item.ReceipeID).FirstOrDefault().RecipeRaytingCount;
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <img src="~/Tema/images/@item.ReceipeImage" class="img-fluid yuvarlakKose thumbImage" alt="">
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li style="color:white">
                                           
                                                <i class="far fa-calendar-alt"></i> @item.CreateDate.ToString("d")
                                           
                                        </li>
                                        <li class="mx-2" style="color:white">
                                          
                                                <i class="far fa-thumbs-up"></i> @recipeRaytingCount
                                           
                                        </li>
                                        <li style ="color:white">
                                            
                                                <i class="far fa-comment"></i> @ViewBag.commentCount
                                           
                                        </li>
                                        <li>
                                            <a href="/Recipe/RecipeListOnClickWriter/@item.AppUserID" style="color:#ffd600">
                                                <i class="bi bi-person"></i> @ViewBag.WriterName
                                            </a>
                                        </li>
                                        @if (item.CreateDate.ToShortDateString() == DateTime.Now.ToShortDateString())
                                        {
                                            <li style="color:white">
                                                
                                                    <i class="bi bi-alarm"></i> @ViewBag.Minute
                                               
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="single.html">@item.ReceipeName </a>
                            </h3>
                            <p>
                                @item.ReceipeDescription
                            </p>
                            @*<a href="single.html" class="btn btn-primary read-m">Read More</a>*@
                        </div>
                    }

                    @await Component.InvokeAsync("CommentListByRecipe",new{id=ViewBag.id})

                    @*@await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml")*@
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml",RecipeID ) @*Burada virgül'den sonra bir model belirterek parametre gönderebiliyoruz*@
                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="/Tema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        @await Component.InvokeAsync("NewsLetters")

                        @*@await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml",new{id=ViewBag.id})*@
                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("WriterLastRecipes",new{id=ViewBag.id})
                        <div class="single-gd my-5 tech-btm">
                            <h4>Besin Değerleri</h4>
                            <label style="font-size:15px;  ">Kalori</label>
                            <div class="progress">
                               
                                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <label style="font-size:15px;  ">Yağ</label>

                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <label style="font-size:15px;  ">Tuz</label>

                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <label style="font-size:15px;  ">Karbonhidrat</label>

                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <label style="font-size:15px;">Şeker</label>

                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-danger"  role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
    <!--footer-->
    <!---->
    <!-- js -->
    <!--// end-smoth-scrolling -->

    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="js/bootstrap.js"></script>


</body>

</html>
