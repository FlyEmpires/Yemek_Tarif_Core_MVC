@model List<Recipe>
<div class="tech-btm">
	<h4>Yazarın son tarifleri</h4>
	@foreach (var item in Model.TakeLast(3))
	{
		
	<div class="blog-grids row mb-3">
		<div class="col-md-5 blog-grid-left">
				<a href="/Recipe/RecipeReadAll/@item.ReceipeID">
				<img src="/@item.ReceipeImage" class="img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">
			<h5>
				<a href="/Recipe/RecipeReadAll/@item.ReceipeID">@item.ReceipeName </a>
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i> @item.CreateDate.ToString("d")
				</span>
			</div>
		</div>
	</div>
	}

</div>