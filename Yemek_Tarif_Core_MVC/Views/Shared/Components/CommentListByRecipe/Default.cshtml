@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
    <h3>Yorumlar</h3>
    <br />
    @if (Model.Count() == 0)
    {
        <h5>Henüz Yorum Yapılmamış...<br> Bir Yorum Yazmak İster misin?</h5>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="/Tema/images/comment.png" alt="" style="height:35px;margin-left:12px;margin-top:10px;" class="img-fluid" />
                <div class="media-body" style="margin-left:10px; margin-top:15px;">
                    <h6 class="mt-0">@item.CommentUserName</h6>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }



    }

</div>
